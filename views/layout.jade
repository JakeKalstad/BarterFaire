doctype html
html
    head
        title= title
        link(rel='stylesheet', href='/stylesheets/Site.css')
        link(rel='stylesheet', href='/stylesheets/dropzone.css') 
        link(rel='stylesheet', href='/stylesheets/toastr.css')
        link(rel='stylesheet', href='/stylesheets/vex.css')
        link(rel='stylesheet', href='/stylesheets/opentip.css')
        link(rel='stylesheet', href='/stylesheets/vex-theme-os.css')
    body
        block content 
        script(src='/javascripts/modernizr-2.6.2.js')
        script(src='/javascripts/jquery-1.8.2.min.js')
        script(src="//cdn.socket.io/socket.io-1.0.0.js")
        script(src='/javascripts/toastr.js')
        script(src='/javascripts/q.min.js')
        script(src='/javascripts/vex.combined.min.js')
        script(src='/javascripts/unslider.min.js')
        script(src='/javascripts/underscore.js') 
        script(src='/javascripts/knockout-2.2.0.js')
        script(src='/javascripts/native.history.min.js')
        script(src='/javascripts/dropzone.js')
        script(src='/javascripts/opentip-native.js') 
        script(src='/javascripts/Application.js') 
        
        #content.content-wrapper 
            header.headerStyle.component(style="background:#F7FFFF")
                div
                   div
                      img.logo(src="/Images/LOGO.png", onclick="window.location='/'")
                      section#contentWrapSection.content-wrapper.main-content.clear-fix
                        div#titleBar.content-wrapper
                            hgroup.title
                                h1(style="font-family: 'Open Sans', Arial, sans-serif;font-size: 40px;font-variant: small-caps;") Barter Faire
                                h2 
                                    p(style="margin-left:24px;font-size: 14px;line-height: 0px;") A way to buy and sell together with your neighbors. 
            section#loginInformation.loginInfoSection 
                div(data-bind="if: name")
                    span.sexyFont Welcome back, 
                        span(data-bind="text: name")
                    ul
                        li 
                            img(data-bind="click: viewMessages, attr: { src: mailImg }")
                        li
                            button.topMenuButton(data-bind="click: manageAccount") Manage Account                            
                        li
                            button.topMenuButton(data-bind="click: logOut") Log Off                         
                div(data-bind="ifnot: name")
                    ul
                        li
                            button.topMenuButton(onclick="Application.Transition('register')") Register 
                        li
                            button.topMenuButton(onclick="Application.Transition('login')") Log-in 
        div#body
            div.leftToolBox.component(style="background:#F7FFFF")
                span
                    p#toolBoxHeader(style="font-weight: bold;font-size: 18px;") Find stuff fast!
                        span#searchTip
                            img(src="/Images/help.gif", style="margin-left:5px")
                div#filters(style="float:left")
                                        
                div#tool(style="margin-left:175px;margin-top:90px; cursor: pointer;background:#F7FFFF", onclick="toggleTools()")
                    img#leftToolHandle(src="/Images/up.png")                
            div#mainContent.component(style="display: block;background:#F7FFFF;padding: 2px 2px 25px 0px;border-radius: 15px;")
script(type='text/javascript').
    var BarterWindow = window;
    $(document).ready(function () {
        if (BarterWindow.File && BarterWindow.FileReader && BarterWindow.FileList && BarterWindow.Blob) {
            toastr.success("Welcome to Barter Faire");
        } else {
            toastr.error("You are using an older browser that isn't HTML5 compliant :\ Try again when you step it up nerd.", "STEP IT UP");
        }
        Application.Initialize(BarterWindow);
        Application.Transition("home"); 
    });